<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/ivAvatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/default_window_edge"
        android:foreground="@drawable/bg_upload_avatar_foreground"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:siBorderAlpha="1.0"
        app:siBorderColor="#FFF7577F"
        app:siBorderType="stroke"
        app:siBorderWidth="1dp"
        app:siForeground="@color/color_ffc3b4d2"
        app:siRadius="45dp"
        app:siSquare="false" />
</androidx.constraintlayout.widget.ConstraintLayout>