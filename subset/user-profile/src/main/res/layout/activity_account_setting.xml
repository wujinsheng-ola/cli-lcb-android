<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="@dimen/default_window_edge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:qmui_backgroundColor="#1FFFC542"
        app:qmui_radius="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="@dimen/default_window_edge"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:siBorderAlpha="1"
                app:siBorderColor="@android:color/white"
                app:siBorderWidth="1dp"
                app:siForeground="@color/color_ffc3b4d2"
                app:siRadius="36dp"
                app:siSquare="false" />

            <LinearLayout
                android:id="@+id/llUseInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/default_window_edge"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivAvatar"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/mainTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="@string/default_text_holder" />

                <com.salton123.widget.IconFontTextView
                    android:id="@+id/tvUid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/secondTextColor"
                    android:textColor="@color/secondTextColor"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="ID:816964652" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout>


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/default_window_edge"
        android:layout_marginEnd="@dimen/default_window_edge"
        android:gravity="center"
        android:padding="@dimen/default_window_edge"
        android:text="@string/logout"
        android:textColor="@color/mainTextColor"
        app:qmui_backgroundColor="@color/mainBrandColor"
        app:qmui_radius="25dp" />

</androidx.appcompat.widget.LinearLayoutCompat>